<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h3>Add a New Comment to <%= university.name %></h3>
        </div>
    
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/universities/<%= university._id %>/comments" method="POST">
                <div class="form-group">
                    <label for="text">Comment</label>
                    <input class="form-control" type="text" name="comment[text]" placeholder="Somthing...">
                </div>  
          
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
      
            <a href="/universities">Go Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>