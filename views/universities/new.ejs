<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Add a New University</h2>
        </div>
        
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/universities" method="POST">
                <div class="form-group">
                    <label for="name">Institution name</label>
                    <input class="form-control" type="text" name="name" placeholder="University or college">
                </div>
                
                <div class="form-group">
                    <label for="tuition">Anuual tuition</label>
                    <input class="form-control" type="number" name="tuition" placeholder="In $CAD" min="1000.00" step="100.00">
                </div>
        
                <div class="form-group">
                    <label for="image">Image link</label>
                    <input class="form-control" type="text" name="image" placeholder="URL">
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Montreal, QC">
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label> 
                    <input class="form-control" type="text" name="description" placeholder="Basic infomation">
                </div>
          
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
      
            <a href="/universities">Go Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>