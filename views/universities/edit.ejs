<% include ../partials/header %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h2>Edit <%= university.name %></h2>
        </div>
    
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/universities/<%= university._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Institution name</label>
                    <input class="form-control" type="text" name="university[name]" value="<%= university.name %>">
                </div>
                
                <div class="form-group">
                    <label for="tuition">Anuual tuition</label>
                    <input class="form-control" type="number" name="university[tuition]" value="<%= university.tuition %>" min="1000.00" step="100.00">
                </div>
        
                <div class="form-group">
                    <label for="image">Image link</label>  
                    <input class="form-control" type="text" name="university[image]" value="<%= university.image %>">
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= university.location %>">
                </div>
                
                <div class="form-group">
                    <label for="description">Description</label>  
                    <input class="form-control" type="text" name="university[description]" value="<%= university.description %>">
                </div>
          
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
      
            <a href="/universities">Go Back</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>